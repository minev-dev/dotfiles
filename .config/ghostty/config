font-family = JetBrains Mono
font-size = 18
clipboard-read = allow
clipboard-write = allow

confirm-close-surface = false

# --- CROSS-PLATFORM MACOS/LINUX SETUP ---

# 1. NEW TAB
keybind = super+t=new_tab
keybind = ctrl+t=new_tab

# 2. CLOSE TAB
keybind = super+w=close_tab
keybind = ctrl+w=close_tab

# 3. COPY
keybind = super+c=copy_to_clipboard
keybind = ctrl+insert=copy_to_clipboard

# 4. PASTE
keybind = super+v=paste_from_clipboard
keybind = shift+insert=paste_from_clipboard

# 5. TAB SWITCHING
# macOS: Cmd+1..9
keybind = super+1=goto_tab:1
keybind = super+2=goto_tab:2
keybind = super+3=goto_tab:3
keybind = super+4=goto_tab:4
keybind = super+5=goto_tab:5
keybind = super+6=goto_tab:6

# 6. MULTILINE INPUT (Fix for Shift+Enter in CLI apps)
keybind = shift+enter=text:\x0a

# Linux: Thumb+1..9 sends Ctrl+1..9
keybind = ctrl+1=goto_tab:1
keybind = ctrl+2=goto_tab:2
keybind = ctrl+3=goto_tab:3
keybind = ctrl+4=goto_tab:4
keybind = ctrl+5=goto_tab:5
keybind = ctrl+6=goto_tab:6

